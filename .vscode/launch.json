    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug RS IMLE (torch.distributed)",
            "type": "debugpy",
            "request": "launch",
            "module": "torch.distributed.run",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "--nproc_per_node=1",
                "${workspaceFolder}/imle_policy/train.py",
                "--task",
                "zarr",
                "--method",
                "rs_imle"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        }
    ]
}
